<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.herrvoennchen.fxsmtp.MainViewController">
    <top>
      <GridPane BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <FlowPane hgap="10.0" vgap="10.0">
               <children>
                      <Label text="Port" />
                      <TextField fx:id="portField" onKeyTyped="#updateSettings" prefWidth="74.0" promptText="Port" />
                      <Button fx:id="startButton" mnemonicParsing="false" onAction="#startServerClick" prefWidth="150.0" text="Start Server" />
                  <Label fx:id="statusLabel" style="-fx-font-weight: bold;" text="Server stopped">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </FlowPane>
            <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1">
               <children>
                  <Button fx:id="settingsButton" mnemonicParsing="false" prefWidth="120.0" text="Einstellungen" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </GridPane>
    </top>
    <center>
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Messages">
                    <content>
                        <ListView prefHeight="200.0" prefWidth="200.0" />
                    </content>
                </Tab>
                <Tab text="Log">
                    <content>
                        <TextArea editable="false">
                            <font>
                                <Font name="Courier New" size="13.0" />
                            </font>
                        </TextArea>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
